{{> header }}

<div class="container content">
    <div class="jumbotron">
            <h1>BURGERS <i class="fas fa-hamburger"></i></h1>
        <div id="saying">
        bigger better beefier
        </div><hr>

    <form> 
        <div class="form-group">
            <input type="text" required placeholder="Add a burger " class="form-control" name="burger_name">
        </div>

        <button type="submit" class="btn btn-default">Add burger</button>
    </form>


    <div class="content-burger"> 
       {{#each burgers}}
       {{#unless devoured}}
        <div class="content-burger_list" id={{id}}>
            <img src="./assets/img/cheeseburger.png" alt="">
            <p>{{burger_name}}</p>
            <button class="btn btn-default favorites" data-id="{{id}}" data-state="{{devoured}}">
             Devour it! 
            </button>
        </div>
        {{/unless}}
        {{/each}}
    </div>
    

    </div>
</div><br><br><br><br><br><br><br>


